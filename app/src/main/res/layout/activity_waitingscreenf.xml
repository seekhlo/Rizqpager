<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".waitingscreenf"
    android:background="@color/Bluebackground"
    >


  <ImageView
        android:id="@+id/rizqlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rizq_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      android:layout_margin="50dp"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="50dp"
        android:text="FINANCIAL WILNESS FOR SALARIED PROFESSIONALS AND FREELANCERS"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rizqlogo" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="You are"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/text3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#1,225"
        app:layout_constraintTop_toBottomOf="@id/text4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text5"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of 1,483 on the waitlist"
        app:layout_constraintTop_toBottomOf="@id/text5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text6"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jump the Queue!"
        app:layout_constraintTop_toBottomOf="@id/text6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text7"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite 5 friends to jump the queue. We'll get you in faster for helping us spread the world"
        app:layout_constraintTop_toBottomOf="@id/text7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text8"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:background="@color/CardBluebackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 0 Invited friends "
        app:layout_constraintTop_toBottomOf="@id/text8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text9"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:padding="10dp"
        />
    <TextView
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ðŸ“¹ Watch full video "
        app:layout_constraintTop_toBottomOf="@id/text9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/text10"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite Friends"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="70dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>