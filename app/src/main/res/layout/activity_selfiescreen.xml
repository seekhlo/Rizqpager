<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selfiescreen"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Selfie"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/selfietext"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a selfie to help us recognize you"
        android:textColor="@color/black"
        android:id="@+id/selfieline"
        app:layout_constraintTop_toBottomOf="@id/selfietext"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        app:layout_goneMarginTop="100dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/selfieline"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:id="@+id/imgcam"
        android:scaleType="fitXY"
        android:background="@drawable/imgbackground"
        android:clipToOutline="true"
        />


    <Button
        android:id="@+id/btncam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/camerabutton"
        android:text="ðŸ“·"
        android:textColor="@color/black"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgcam" />







</androidx.constraintlayout.widget.ConstraintLayout>